# 开发环境配置 (支持热重载)
# 使用方法: docker compose -f docker-compose.dev.yml up
version: '3.8'

services:
  # {{SERVICE_TITLE}} 服务 (开发模式 - 热重载)
  {{SERVICE_NAME}}:
    build:
      context: .
      dockerfile: Dockerfile.dev
    container_name: uyou-{{SERVICE_NAME}}-dev
    environment:
      MONGO_HOST: mongodb
      MONGO_PORT: 27017
      MONGO_USER: root
      MONGO_PASSWORD: ${MONGO_PASSWORD:-example}
      MONGO_DATABASE: {{DB_NAME}}
      REDIS_HOST: redis
      REDIS_PORT: 6379
      REDIS_DB: {{REDIS_DB}}
      RABBITMQ_HOST: ${RABBITMQ_HOST:-rabbitmq}
      RABBITMQ_PORT: ${RABBITMQ_PORT:-5672}
      RABBITMQ_USER: ${RABBITMQ_USER:-uyou}
      RABBITMQ_PASSWORD: ${RABBITMQ_PASSWORD:-uyou123}
      RABBITMQ_VHOST: ${RABBITMQ_VHOST:-uyou}
      JWT_SECRET: ${JWT_SECRET:-dev_secret_key}
    volumes:
      # 挂载源代码目录 (热重载核心)
      - .:/app
      # 保留 go mod 缓存
      - go-mod-cache:/go/pkg/mod
    ports:
      - "{{GRPC_PORT}}:{{GRPC_PORT}}"
      - "{{HTTP_PORT}}:{{HTTP_PORT}}"
    depends_on:
      - mongodb
      - redis
    networks:
      - {{SERVICE_NAME}}-network
    restart: unless-stopped

  # MongoDB 数据库
  mongodb:
    image: mongo:7
    container_name: uyou-{{SERVICE_NAME}}-mongodb
    environment:
      MONGO_INITDB_ROOT_USERNAME: root
      MONGO_INITDB_ROOT_PASSWORD: ${MONGO_PASSWORD:-example}
      MONGO_INITDB_DATABASE: {{DB_NAME}}
    ports:
      - "27017:27017"
    volumes:
      - mongodb_data:/data/db
    networks:
      - {{SERVICE_NAME}}-network
    restart: unless-stopped

  # Redis 缓存
  redis:
    image: redis:7-alpine
    container_name: uyou-{{SERVICE_NAME}}-redis
    ports:
      - "6379:6379"
    volumes:
      - redis_data:/data
    networks:
      - {{SERVICE_NAME}}-network
    restart: unless-stopped

networks:
  {{SERVICE_NAME}}-network:
    driver: bridge

volumes:
  mongodb_data:
  redis_data:
  go-mod-cache:
