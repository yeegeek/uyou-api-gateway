# Air 热重载配置
# 文档: https://github.com/cosmtrek/air

root = "."
testdata_dir = "testdata"
tmp_dir = "tmp"

[build]
  # 构建命令
  cmd = "go build -o ./tmp/main ./cmd/server/main.go"
  # 二进制文件路径
  bin = "./tmp/main"
  # 监控的文件扩展名
  include_ext = ["go", "yaml", "yml"]
  # 排除的目录
  exclude_dir = ["tmp", "vendor", "testdata", "migrations"]
  # 排除的文件
  exclude_file = []
  # 排除正则
  exclude_regex = ["_test.go"]
  # 排除不变的文件
  exclude_unchanged = false
  # 跟随符号链接
  follow_symlink = false
  # 完整路径
  full_bin = ""
  # 构建延迟（毫秒）
  delay = 1000
  # 发生构建错误时停止运行旧二进制文件
  stop_on_error = true
  # 发送中断信号
  send_interrupt = false
  # 中断信号超时
  kill_delay = "2s"
  # 重新运行二进制文件的参数
  args_bin = []

[color]
  # 自定义颜色
  build = "yellow"
  main = "magenta"
  runner = "green"
  watcher = "cyan"

[log]
  # 显示日志时间
  time = false

[misc]
  # 退出时清理临时目录
  clean_on_exit = true

[screen]
  # 清屏
  clear_on_rebuild = true
  # 保持滚动
  keep_scroll = true
