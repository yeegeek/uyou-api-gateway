package conf

import (
	"fmt"
	"os"
	"strings"

	"github.com/joho/godotenv"
	"github.com/spf13/viper"
)

type Config struct {
	Server   ServerConfig
	Database DatabaseConfig
	Redis    RedisConfig
	JWT      JWTConfig
	Log      LogConfig
}

type ServerConfig struct {
	GRPCPort int `mapstructure:"grpc_port"`
	HTTPPort int `mapstructure:"http_port"`
}

type DatabaseConfig struct {
	Host     string
	Port     int
	User     string
	Password string
	DBName   string `mapstructure:"dbname"`
	SSLMode  string `mapstructure:"sslmode"`
}

type RedisConfig struct {
	Host     string
	Port     int
	DB       int
	Password string
}

type JWTConfig struct {
	Secret string
}

type LogConfig struct {
	Level  string
	Format string
}

func Load() *Config {
	v := viper.New()
	v.SetConfigName("config")
	v.SetConfigType("yaml")
	v.AddConfigPath("./config")
	v.SetEnvKeyReplacer(strings.NewReplacer(".", "_"))
	v.SetEnvPrefix("{{SERVICE_NAME_UPPER}}")
	v.AutomaticEnv()

	// Load .env file if exists
	_ = godotenv.Load()

	if err := v.ReadInConfig(); err != nil {
		// 容忍配置文件不存在，可能全靠环境变量
	}

	conf := &Config{}
	if err := v.Unmarshal(conf); err != nil {
		panic(fmt.Sprintf("failed to unmarshal config: %v", err))
	}
	
	// 优先从环境变量读取 JWT Secret
	if jwtSecret := os.Getenv("JWT_SECRET"); jwtSecret != "" {
		conf.JWT.Secret = jwtSecret
	}
	
	// 验证配置
	if err := conf.Validate(); err != nil {
		panic(fmt.Sprintf("config validation failed: %v", err))
	}
	
	return conf
}

// Validate 验证配置的必需字段
func (c *Config) Validate() error {
	// 验证服务器配置
	if c.Server.GRPCPort <= 0 || c.Server.GRPCPort > 65535 {
		return fmt.Errorf("invalid grpc_port: %d (must be between 1 and 65535)", c.Server.GRPCPort)
	}
	if c.Server.HTTPPort <= 0 || c.Server.HTTPPort > 65535 {
		return fmt.Errorf("invalid http_port: %d (must be between 1 and 65535)", c.Server.HTTPPort)
	}
	
	// 验证 JWT Secret
	if c.JWT.Secret == "" {
		return fmt.Errorf("jwt.secret is required")
	}
	if len(c.JWT.Secret) < 16 {
		return fmt.Errorf("jwt.secret is too short (minimum 16 characters)")
	}
	
	// 验证日志配置
	if c.Log.Level != "" {
		validLevels := map[string]bool{"debug": true, "info": true, "warn": true, "error": true}
		if !validLevels[c.Log.Level] {
			return fmt.Errorf("invalid log.level: %s (must be debug, info, warn, or error)", c.Log.Level)
		}
	}
	
	return nil
}
